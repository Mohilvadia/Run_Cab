<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/tv_background"
        android:text="Date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textSize="16sp"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/tv_background"
        android:text="Time"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        />

    <EditText
        android:id="@+id/etSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:hint="Enter source"
        android:background="@drawable/tv_background"
        android:layout_marginHorizontal="15dp"
        />

    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Enter Destination"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_marginHorizontal="15dp"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spSelectWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:tooltipText="Select Way"
        android:background="@drawable/tv_background"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spCarType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:tooltipText="Car Type"
        android:background="@drawable/tv_background"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="15dp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spPayType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:tooltipText="Car Type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@drawable/tv_background"
            android:layout_marginTop="15dp"/>


        <EditText
        android:id="@+id/etAmout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Amount"
        android:inputType="number"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />

        <EditText
            android:id="@+id/etDriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Driver Name"
            android:background="@drawable/tv_background"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"

            android:layout_marginHorizontal="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />


    <EditText
        android:id="@+id/etDriverNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Driver Number"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:inputType="number"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />


    <EditText
        android:id="@+id/etAdvance"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Advance"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />

    <EditText
        android:id="@+id/etAvg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Average Km"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />

    <EditText
        android:id="@+id/etVendorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Vendor Name"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />

        <EditText
            android:id="@+id/etCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Vendor Name"
            android:background="@drawable/tv_background"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />

    <EditText
        android:id="@+id/etTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Total Amount"
        android:inputType="number"
        android:background="@drawable/tv_background"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="save"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/black"
            android:textColor="@color/white"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>